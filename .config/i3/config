#Print screen
bindsym Print exec scrot -e 'mv $f ~/Pictures/Screenshot/'

# Pulse Audio volume/mute controls
# Use pactl to adjust volume in PulseAudio. We have to send a signal to i3blocks to make any change.
set $refresh_i3status pkill -RTMIN+1 i3blocks

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen brightness controls - laptop
#bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
#bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# click to focus
focus_follows_mouse no

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec urxvt
bindsym $mod+Return exec x-terminal-emulator
# Start your default browser
bindsym $mod+w exec sensible-browser
# Start your default file manager
bindsym $mod+e exec xdg-open $HOME
# start a music player
bindsym $mod+m exec x-terminal-emulator -e cmus
# start a monitoring program
bindsym $mod+t exec x-terminal-emulator -e htop

# kill focused window
bindsym $mod+Shift+q kill

# start rofi (a program launcher)
bindsym $mod+d exec rofi -show drun

# change focus
#bindsym $mod+j focus left
