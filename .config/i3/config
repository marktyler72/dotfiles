# window colors
# class                 border              background         text                 indicator
client.focused          $active-bg-color    $active-bg-color   $text-color          $indicator-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $indicator-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $indicator-color

#lock
bindsym $mod+shift+x exec i3lock --color=$active-bg-color

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3blocks
	font pango: FontAwesome 10
	position bottom
	tray_padding 6
	colors {
		background $bar-bg-color
		separator  $separator-color
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
		}

}

# Startup: 
# Commands which always run, even on i3 reload.

exec_always --no-startup-id feh --bg-fill ~/Pictures/wallpaper/lainblue.jpg
#exec_always --no-startup-id picom --vsync --backend glx

# Autostart commands on i3 start.
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id xautolock -time 8 -locker 'i3lock -c 010410'
exec --no-startup-id i3-msg 'workspace 1;exec i3-sensible-terminal;exec i3-sensible-terminal'
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1
